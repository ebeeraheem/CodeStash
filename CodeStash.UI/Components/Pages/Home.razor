@page "/"
@inject IJSRuntime JS

<PageTitle>CodeStash</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-2 mb-8">
    <MudText Typo="Typo.h1" Align="Align.Center" Style="@($"color:{CodeStashColors.Primary}")">
        Stash. Sync. Share.
    </MudText>

    <MudText Typo="Typo.h2" Align="Align.Center">
        Discover, share, and reuse quality code snippets from the developer community
    </MudText>
</MudContainer>

@* Popular Languages *@
<MudText Typo="Typo.h3" Style="font-weight:600">
    Popular Languages
</MudText>

<MudContainer Class="d-flex justify-content-start ms-0 flex-grow-1 my-3 gap-4" MaxWidth="MaxWidth.Medium">
    @foreach (var language in PopularLanguages)
    {
        <MudLink Href="@($"snippets/{language}")"
                 Class="d-flex py-2 align-center mud-border-primary rounded-pill popular-languages flex-1 cursor-pointer justify-center border"
                Underline="Underline.None"
                Color="Color.Primary">
            @language
        </MudLink>
    }
</MudContainer>

@code{
    private string[] PopularLanguages = { "JavaScript", "Python", "Java", "TypeScript", "C#", "PHP" };
}
