@page "/"

<PageTitle>CodeStash</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="my-5">
    <MudText Typo="Typo.h1" Align="Align.Center">
        Stash. Sync. Share.
    </MudText>

    <MudText Typo="Typo.h2" Align="Align.Center">
        Discover, share, and reuse quality code snippets from the developer community
    </MudText>
</MudContainer>

@* Popular Languages *@
<MudText Typo="Typo.h3">
    Popular Languages
</MudText>

<MudContainer Class="d-flex justify-content-start ms-0 flex-grow-1 my-3 gap-4" MaxWidth="MaxWidth.Medium">
    @foreach (var language in PopularLanguages)
    {
        <MudLink Href="@($"snippets/{language}")"
                 Class="d-flex py-2 align-center mud-border-primary rounded-pill flex-1 cursor-pointer justify-center border"
            Color="Color.Primary">
            @language
        </MudLink>
    }
</MudContainer>

@code{
    string[] PopularLanguages = { "JavaScript", "Python", "Java", "TypeScript", "C#", "PHP" };
}